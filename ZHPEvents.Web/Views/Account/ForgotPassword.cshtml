@using ZHPEvents.ViewModels.Account
@model ForgotPasswordViewModel

@{
    ViewData["Title"] = "Przypominanie hasła";
    Layout = "_AccountLayout";
}
<div class="col-md-8">
    <div class="card-group">
        <div class="card p-4">
            <form class="form-signin" method="post">
                <div class="card-body">
                    <h1>Przypominanie hasła</h1>
                    <p class="text-muted">Wpisz swój adres mail, aby dostać widomość z linkiem do zaminy hasła</p>
                    <p><div asp-validation-summary="All" class="text-danger"></div></p>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fas fa-at"></i>
                            </span>
                        </div>

                        <input asp-for="Email" type="email" id="inputEmail" class="form-control input-right-radius" placeholder="Email address" required autofocus>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <button class="btn btn-pill btn-outline-success px-4" type="submit">Wyślij mail</button>
                        </div>
                        <div class="col-6 text-right">
                            <a asp-action="Register" role="button" class="btn btn-link px-0">Zarejestruj się</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="card text-white bg-green py-5 d-md-down-none" style="width:44%">
            <div class="card-body text-center">
                <div>
                    <h2>Logowanie</h2>
                    <p>Jeśli pamiętasz swoje dane logowanie przejdź do strony logowania.</p>
                    <a asp-action="Login" role="button" class="btn btn-pill btn-outline-light  mt-3">Zaloguj się</a>
                </div>
            </div>
        </div>
    </div>
</div>