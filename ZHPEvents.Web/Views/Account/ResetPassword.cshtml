@using ZHPEvents.ViewModels.Account
@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Logowanie";
    Layout = "_AccountLayout";
}
<div class="col-md-8">
    <div class="card-group">
        <div class="card p-4">
            <form class="form-signin" method="post">
                <div class="card-body">
                    <h1>Logowanie</h1>
                    <p class="text-muted">Zalaguj się na swoje konto</p>
                    <p><div asp-validation-summary="All" class="text-danger"></div></p>
                    <input asp-for="Code" type="hidden" />
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fas fa-at"></i>
                            </span>
                        </div>
                        <input asp-for="Email" type="email"class="form-control input-right-radius" placeholder="Email address" required autofocus>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                        </div>
                        <input asp-for="Password" type="password" class="form-control input-right-radius" placeholder="Password" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                        </div>
                        <input asp-for="ConfirmPassword" type="password" class="form-control input-right-radius" placeholder="Password" required>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <button class="btn btn-pill btn-outline-success px-4" type="submit">Zmien hasło</button>
                        </div>
                        <div class="col-6 text-right">
                            <a href="#" role="button" class="btn btn-link px-0">Zapomniałeś hasła?</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="card text-white bg-green py-5 d-md-down-none" style="width:44%">
            <div class="card-body text-center">
                <div>
                    <h2>Sign up</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                    <a href="#" role="button" class="btn btn-pill btn-outline-light  mt-3">Zarejestruj się</a>
                </div>
            </div>
        </div>
    </div>
</div>