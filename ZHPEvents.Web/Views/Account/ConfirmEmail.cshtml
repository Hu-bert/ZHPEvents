@using ZHPEvents.ViewModels.Account
@model LoginViewModel

@{
    ViewData["Title"] = "Dziękujemy za potwierdzenie adresu email";
    Layout = "_AccountLayout";
}
<div class="col-md-8">
    <div class="card-group">
        <div class="card p-4">
            <form asp-action="Login" class="form-signin" method="post">
                <div class="card-body">
                    <h1>Logowanie</h1>
                    <p class="text-muted">Zalaguj się na swoje konto</p>
                    <p><div asp-validation-summary="All" class="text-danger"></div></p>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fas fa-at"></i>
                            </span>
                        </div>
                        <input asp-for="Email" type="email" id="inputEmail" class="form-control input-right-radius" placeholder="Email address" required autofocus>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="input-group mb-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                        </div>
                        <input asp-for="Password" type="password" id="inputPassword" class="form-control input-right-radius" placeholder="Password" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox mb-3">

                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <button class="btn btn-pill btn-outline-success px-4" type="submit">Loguj</button>
                        </div>
                        <div class="col-6 text-right">
                            <a asp-action="ForgotPassword"  role="button" class="btn btn-link px-0">Zapomniałeś hasła?</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="card text-white bg-green py-5 d-md-down-none" style="width:44%">
            <div class="card-body text-center">
                <div>
                    <h2>Dziękujemy za potwierdzenie adresu email.</h2>
                    <p>Teraz możesz zalogować się na swoje konto używają podanego maila i hasłą podczas rejestracji.</p>
                </div>
            </div>
        </div>
    </div>
</div>
