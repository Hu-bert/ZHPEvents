@model ZHPEvents.Core.Entities.Raport

@{
    ViewData["Title"] = Model.Title + " - usuń";
    Layout = "_Dashboard";
}



<div class="row">
    <div class="col-sm-12 col-md-9">
        <div class="card">
            <div class="card-header">
                <i class="fas fa-calendar-minus"></i> Usuwanie raportu o nazwie: @Model.Title
            </div>
            <div class="card-body">
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Title)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Title)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.AdditionTime)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.AdditionTime)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.AddingPerson)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.AddingPerson)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.ConfirmingPerson)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.ConfirmingPerson)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Status)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Status)
                    </dd>
                </dl>
            </div>
            <div class="card-footer text-muted">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-pill  btn-outline-danger" />
                    <a asp-action="Index" class="btn btn-pill  btn-outline-secondary" role="button">Powrót do listy wydarzeń</a>
                </form>
            </div>
        </div>
    </div>
