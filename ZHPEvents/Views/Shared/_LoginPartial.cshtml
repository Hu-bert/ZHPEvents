@using Microsoft.AspNetCore.Identity
@using ZHPEvents.Models.Identity

@inject SignInManager<ZHPEventsUser> SignInManager
@inject UserManager<ZHPEventsUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="text-white">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link text-white">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register"  class="text-white">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login"  class="text-white">Login</a></li>
    </ul>
}