@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>Floating labels example for Bootstrap</title>

    <!-- Bootstrap core CSS -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/Font-Awesome/web-fonts-with-css/css/fontawesome-all.css" rel="stylesheet" />

    <!-- Custom styles for this template -->
    <link href="~/css/floating-labels.css" rel="stylesheet" />
</head>

<body>
    <form class="form-signin" method="post">
        <div class="text-center mb-4">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="text-dark">
                <h1>
                    <i class="fas fa-campground"></i>
                </h1><h1 class="h3 mb-3 font-weight-normal">ZHPEvents</h1></a>
                <p>Zaloguj się aby uzyskać dostęp do aplikacji</p>

</div>
        <p><div asp-validation-summary="All" class="text-danger"></div></p>
        <div class="form-label-group">
            <input asp-for="Input.Email" type="email" id="inputEmail" class="form-control" placeholder="Email address" required autofocus>
            <label asp-for="Input.Email" for="inputEmail">Email address</label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-label-group">
            <input asp-for="Input.Password" type="password" id="inputPassword" class="form-control" placeholder="Password" required>
            <label asp-for="Input.Password" for="inputPassword">Password</label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="checkbox mb-3">

                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <div class="row">
            <div class="col-sm">
                <a asp-page="./ForgotPassword">Forgot your password?</a>
            </div>
            <div class="col-sm">
                <p class="text-right">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                </p>
            </div>
        </div>
            <p class="mt-5 mb-3 text-muted text-center">&copy; 2017-2018</p>
</form>
</body>
</html>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
